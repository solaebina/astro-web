---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  underlineOffset?: string;
  underlineHeight?: string;
  class?: string;
}

const { 
  href, 
  external, 
  underline = false, 
  underlineOffset = "after:bottom-2", 
  underlineHeight = "after:h-0.5", 
  class: className, 
  ...rest 
} = Astro.props;
---

<a 
  href={href} 
  target={external ? "_blank" : "_self"} 
  class={cn(
    "inline-block text-black dark:text-white transition-colors duration-300 ease-in-out relative",
    underline && `after:content-[''] after:absolute after:left-0 ${underlineOffset} after:w-full ${underlineHeight} after:bg-current after:scale-x-100 after:transition-transform after:duration-300 after:ease-in-out after:origin-left hover:after:origin-right hover:after:scale-x-0`,
    className
  )}
  {...rest}
>
  <slot/>
</a>
