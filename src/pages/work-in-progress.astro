---
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { SITE } from "@consts";
---

<PageLayout title="Work in Progress" description="This page is currently under construction">
  <Container>
    <div class="text-center">
      <h1 class="animate font-ba font-bold text-black dark:text-white text-center text-xl sm:text-3xl md:text-5xl lg:text-6xl xl:text-7xl 2xl:text-8xl 3xl:text-9xl leading-tight">
        WORK IN
      </h1>
      <h2 class="animate font-ba font-bold text-black dark:text-white text-center text-xl sm:text-3xl md:text-5xl lg:text-6xl xl:text-7xl 2xl:text-8xl 3xl:text-9xl leading-tight">
        PROGRESS
      </h2>
      <p class="animate font-ba text-black dark:text-white mt-6 sm:mt-8 text-center text-lg sm:text-xl md:text-2xl lg:text-3xl opacity-70">
        This page is currently under construction
      </p>
      <p class="animate font-ba text-black dark:text-white mt-3 sm:mt-4 text-center text-base sm:text-lg md:text-xl lg:text-2xl opacity-50">
        Check back soon for updates
      </p>
    </div>
  </Container>
</PageLayout>

