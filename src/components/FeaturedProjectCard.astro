---
import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"projects">;
}

const { entry } = Astro.props;
---

<a href={`/projects/${entry.slug}`} class="group block">
  <div class="relative overflow-hidden rounded-xl border border-black/15 dark:border-white/20 hover:shadow-lg transition-all duration-300">
    <!-- Project Image -->
    <div class="aspect-video overflow-hidden bg-gray-100 dark:bg-gray-800">
      {entry.data.image ? (
        <img 
          src={entry.data.image} 
          alt={entry.data.title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center text-gray-400 dark:text-gray-600">
          <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V5h14v14z"/>
            <path d="M14.14 11.86l-3 3.87L9 13.14 6 18h12l-3.86-5.14z"/>
          </svg>
        </div>
      )}
    </div>
    
    <!-- Project Info -->
    <div class="p-6">
      <div class="flex items-center gap-2 mb-3">
        {entry.data.categories?.map(category => (
          <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200">
            {category === "data-ai" ? "Data & AI" : 
             category.charAt(0).toUpperCase() + category.slice(1)}
          </span>
        ))}
      </div>
      
      <h3 class="text-base font-semibold text-black dark:text-white mb-2 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
        {entry.data.title}
      </h3>
      
      <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
        {entry.data.description}
      </p>
      
      <div class="flex items-center justify-between">
        <span class="text-sm text-gray-500 dark:text-gray-500">
          {entry.data.date.toLocaleDateString('en-US', { 
            year: 'numeric', 
            month: 'long', 
            day: 'numeric' 
          })}
        </span>
        
        <div class="flex items-center text-blue-600 dark:text-blue-400 group-hover:text-blue-700 dark:group-hover:text-blue-300 transition-colors">
          <span class="text-sm font-medium">View Project</span>
          <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </div>
      </div>
    </div>
  </div>
</a>
