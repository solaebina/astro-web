---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  underlineOffset?: string;
  underlineHeight?: string;
  class?: string;
}

const { 
  href, 
  external, 
  underline = false, 
  underlineOffset = "after:bottom-2", 
  underlineHeight = "after:h-0.5", 
  class: className, 
  ...rest 
} = Astro.props;
---
<a 
  href={href} 
  target={external ? "_blank" : "_self"} 
  class={cn(
    "inline-block text-black dark:text-white transition-colors duration-300 ease-in-out relative",
    underline && `link-underline`,
    className
  )}
  {...rest}
>
  <slot/>
</a>

<style>
  .link-underline::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: clamp(5px,0.1em,0.1em); 
    width: 100%;
    height: 0.03em;
    background-color: currentColor;
    transform: scaleX(1);
    transition: transform 300ms ease-in-out;
    transform-origin: left;
  }
  
  .link-underline:hover::after {
    transform-origin: right;
    transform: scaleX(0);
  }
  </style>