---
import Link from "@components/Link.astro";

// Get current pathname for active state
const currentPath = Astro.url.pathname;
---

<!-- Mobile Navigation Bar - Only visible on mobile -->
<nav 
  class="mobile-nav md:hidden fixed bottom-0 left-0 right-0 z-50 bg-stone-900/95 backdrop-blur-sm border-t border-stone-700/50" 
  style="padding-bottom: env(safe-area-inset-bottom);" 
  role="navigation" 
  aria-label="Mobile navigation"
>
  <div class="flex items-center justify-around px-4 py-3">
    <Link 
      href="/" 
      underline={false} 
      class="flex flex-col items-center space-y-1 text-stone-300 hover:text-white transition-colors duration-200"
      aria-current={currentPath === "/" ? "page" : undefined}
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
      </svg>
      <span class="text-xs font-ba">Home</span>
    </Link>
    
    <Link 
      href="/work-in-progress" 
      underline={false} 
      class="flex flex-col items-center space-y-1 text-stone-300 hover:text-white transition-colors duration-200"
      aria-current={currentPath === "/work-in-progress" ? "page" : undefined}
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
      </svg>
      <span class="text-xs font-ba">Marketing</span>
    </Link>
    
    <Link 
      href="/data" 
      underline={false} 
      class="flex flex-col items-center space-y-1 text-stone-300 hover:text-white transition-colors duration-200"
      aria-current={currentPath === "/data" ? "page" : undefined}
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
      </svg>
      <span class="text-xs font-ba">Data & AI</span>
    </Link>
    
    <Link 
      href="/blog" 
      underline={false} 
      class="flex flex-col items-center space-y-1 text-stone-300 hover:text-white transition-colors duration-200"
      aria-current={currentPath === "/blog" ? "page" : undefined}
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
      </svg>
      <span class="text-xs font-ba">Blog</span>
    </Link>
    
    <Link 
      href="/thoughts" 
      underline={false} 
      class="flex flex-col items-center space-y-1 text-stone-300 hover:text-white transition-colors duration-200"
      aria-current={currentPath === "/thoughts" ? "page" : undefined}
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
      </svg>
      <span class="text-xs font-ba">Thoughts</span>
    </Link>
  </div>
</nav>
