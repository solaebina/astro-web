---
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import { PROJECTS } from "@consts";
---

<PageLayout title={PROJECTS.TITLE} description={PROJECTS.DESCRIPTION}>
  <Container>
    <div class="space-y-10">
      <!-- Header -->
      <div class="animate">
        <h1 class="font-semibold text-black dark:text-white text-2xl mb-4">
          Projects
        </h1>
        <p class="text-gray-600 dark:text-gray-400">
          Browse projects by category
        </p>
      </div>

      <!-- Project Categories -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Marketing Projects -->
        <div class="p-6 border border-gray-200 dark:border-gray-700 rounded-lg hover:border-gray-300 dark:hover:border-gray-600 transition-colors duration-200">
          <h2 class="text-xl font-semibold text-black dark:text-white mb-3">
            Marketing
          </h2>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Marketing automation, campaigns, and digital marketing projects
          </p>
          <a 
            href="/marketing" 
            class="inline-block px-4 py-2 bg-black dark:bg-white text-white dark:text-black rounded-lg hover:bg-gray-800 dark:hover:bg-gray-200 transition-colors duration-200"
          >
            View Marketing Projects
          </a>
        </div>

        <!-- Data & AI Projects -->
        <div class="p-6 border border-gray-200 dark:border-gray-700 rounded-lg hover:border-gray-300 dark:hover:border-gray-600 transition-colors duration-200">
          <h2 class="text-xl font-semibold text-black dark:text-white mb-3">
            Data & AI
          </h2>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Machine learning, data analysis, and artificial intelligence projects
          </p>
          <a 
            href="/data" 
            class="inline-block px-4 py-2 bg-black dark:bg-white text-white dark:text-black rounded-lg hover:bg-gray-800 dark:hover:bg-gray-200 transition-colors duration-200"
          >
            View Data & AI Projects
          </a>
        </div>
      </div>
    </div>
  </Container>
</PageLayout>
